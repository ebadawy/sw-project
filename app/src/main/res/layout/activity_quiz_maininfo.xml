<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.khaled.takequiz.QuizMaininfo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Quiz Information:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/nextCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textView"
        android:layout_above="@+id/nextCreate"
        android:id="@+id/layoutrelative1">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subject"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="46dp"
            android:text="Subject" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deadline"
            android:layout_marginTop="30dp"
            android:text="Deadline"
            android:layout_below="@+id/subject"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timelimit"
            android:text="Time Limit"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/deadline"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quizmark"
            android:layout_marginTop="30dp"
            android:text="Quiz Mark"
            android:layout_below="@+id/timelimit"
            android:layout_alignRight="@+id/timelimit"
            android:layout_alignEnd="@+id/timelimit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/subjectWarning"
            android:layout_above="@+id/deadline"
            android:layout_alignLeft="@+id/deadlineWarning"
            android:layout_alignStart="@+id/deadlineWarning"
            android:layout_alignRight="@+id/deadlineWarning"
            android:layout_alignEnd="@+id/deadlineWarning" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/deadlineWarning"
            android:layout_above="@+id/timelimit"
            android:layout_alignLeft="@+id/timelimitWarning"
            android:layout_alignStart="@+id/timelimitWarning"
            android:layout_alignRight="@+id/timelimitWarning"
            android:layout_alignEnd="@+id/timelimitWarning" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/timelimitWarning"
            android:layout_alignBottom="@+id/timelimit"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/quizmarkWarning"
            android:layout_alignBottom="@+id/quizmark"
            android:layout_alignLeft="@+id/timelimitWarning"
            android:layout_alignStart="@+id/timelimitWarning"
            android:layout_alignRight="@+id/timelimitWarning"
            android:layout_alignEnd="@+id/timelimitWarning" />


    </LinearLayout>

</RelativeLayout>
